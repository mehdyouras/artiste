doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet", href="css/screen.css")
        title Contact - Larry Burrows
    body
        header
            h1(aria-level=1) Larry Burrows
            nav
                h2(class="hidden" aria-hidden="true" aria-level=2) Navigation principale
                div#btn-container
                    div#btn-nav
                ul
                    li
                        a(href="index.html") Accueil
                    li
                        a(href="galerie.html") Galerie
                    li
                        a(href="exposition.html") Exposition
        section.contact.contact-page
            h2.hidden(aria-hidden="true" aria-level=2) Obtenir un catalogue
            form(action="#")
                fieldset
                    legend Obtenir un catalogue
                    div#form-group-name
                        label(for="name") Votre nom
                        input(type="text" name="name" id="name")
                    div#form-group-email
                        label(for="email") Votre email
                        input(type="email" name="email" id="email")
                    div#form-group-address
                        label(for="address") Votre adresse
                        input(type="text" name="address" id="address")
                    div#submit-line
                        div
                            label(for="count") Nombre de catalogue souhait√©
                            input(type="number" value="1" name="count" id="count")
                        input(type="submit" value="Envoyer")
        footer
            nav
                h2(class="hidden" aria-hidden="true") Navigation secondaire
                ul
                    li
                        a(href="bibliographie.html") Bibliographie
                    li
                        a(href="liens.html") Liens
        script(src="js/script.js")
